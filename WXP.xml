					</OnValueChanged>
					<OnMouseWheel>WXP.OnSliderScroll(self, delta)</OnMouseWheel>
				</Scripts>
			</Slider>
						
			<Button name="WXP_OptBut_ZeroOffset" inherits="UIPanelButtonTemplate" text="0">
